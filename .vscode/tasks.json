{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and run current file",
            "type": "shell",
            "command": "clang++ -std=c++23 -Iinclude '${file}' -o '${workspaceFolder}/build/${fileBasenameNoExtension}' && '${workspaceFolder}/build/${fileBasenameNoExtension}'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}